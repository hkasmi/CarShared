@model IEnumerable<CarShared.Shared.BTO.CityBTO>

@{
    ViewBag.Title = "DetailsCities";
}

<h2>DetailsCities</h2>

<p>
    @Html.ActionLink("Ajouter une nouvelle ville", "AddCity")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCity", new {  id=item.CityId  }) |
            @Html.ActionLink("Delete", "DeleteCity", new {  id=item.CityId  })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back to Last Page", "GetCityByCountry")
</p>
