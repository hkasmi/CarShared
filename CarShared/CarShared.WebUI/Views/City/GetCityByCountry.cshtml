@using CarShared.Common.Enums
@{
    ViewBag.Title = "GetCityByCountry";
}

<h2>GetCityByCountry</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Select Your Country", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Country",
                    new SelectList(Enum.GetValues(typeof(Country))),
                    "Select Country",
                    new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Go" class="btn btn-default" />
            </div>
        </div>
    </div>
}
